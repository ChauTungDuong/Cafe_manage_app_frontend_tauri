}

const products: Product[] = [
  { id: 1, name: 'Espresso', price: 35000, category: 'Coffee', image: 'https://images.unsplash.com/photo-1635090976010-d3f6dfbb1bac?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjb2ZmZWUlMjBjdXAlMjBsYXR0ZXxlbnwxfHx8fDE3NjIzMjU4NDB8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 2, name: 'Cappuccino', price: 45000, category: 'Coffee', image: 'https://images.unsplash.com/photo-1635090976010-d3f6dfbb1bac?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjb2ZmZWUlMjBjdXAlMjBsYXR0ZXxlbnwxfHx8fDE3NjIzMjU4NDB8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 3, name: 'Latte', price: 48000, category: 'Coffee', image: 'https://images.unsplash.com/photo-1635090976010-d3f6dfbb1bac?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjb2ZmZWUlMjBjdXAlMjBsYXR0ZXxlbnwxfHx8fDE3NjIzMjU4NDB8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 4, name: 'Americano', price: 38000, category: 'Coffee', image: 'https://images.unsplash.com/photo-1635090976010-d3f6dfbb1bac?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjb2ZmZWUlMjBjdXAlMjBsYXR0ZXxlbnwxfHx8fDE3NjIzMjU4NDB8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 5, name: 'Mocha', price: 50000, category: 'Coffee', image: 'https://images.unsplash.com/photo-1635090976010-d3f6dfbb1bac?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjb2ZmZWUlMjBjdXAlMjBsYXR0ZXxlbnwxfHx8fDE3NjIzMjU4NDB8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 6, name: 'Green Tea', price: 35000, category: 'Tea', image: 'https://images.unsplash.com/photo-1729259586570-639957809271?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxncmVlbiUyMHRlYSUyMGN1cHxlbnwxfHx8fDE3NjI0MjE1MDN8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 7, name: 'Milk Tea', price: 42000, category: 'Tea', image: 'https://images.unsplash.com/photo-1729259586570-639957809271?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxncmVlbiUyMHRlYSUyMGN1cHxlbnwxfHx8fDE3NjI0MjE1MDN8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 8, name: 'Lemon Tea', price: 38000, category: 'Tea', image: 'https://images.unsplash.com/photo-1729259586570-639957809271?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxncmVlbiUyMHRlYSUyMGN1cHxlbnwxfHx8fDE3NjI0MjE1MDN8MA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 9, name: 'Croissant', price: 32000, category: 'Pastry', image: 'https://images.unsplash.com/photo-1712723247648-64a03ba7c333?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjcm9pc3NhbnQlMjBwYXN0cnl8ZW58MXx8fHwxNzYyMzk1OTI5fDA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 10, name: 'Chocolate Cake', price: 45000, category: 'Pastry', image: 'https://images.unsplash.com/photo-1712723247648-64a03ba7c333?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjcm9pc3NhbnQlMjBwYXN0cnl8ZW58MXx8fHwxNzYyMzk1OTI5fDA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 11, name: 'Tiramisu', price: 55000, category: 'Pastry', image: 'https://images.unsplash.com/photo-1712723247648-64a03ba7c333?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjcm9pc3NhbnQlMjBwYXN0cnl8ZW58MXx8fHwxNzYyMzk1OTI5fDA&ixlib=rb-4.1.0&q=80&w=1080' },
  { id: 12, name: 'Muffin', price: 28000, category: 'Pastry', image: 'https://images.unsplash.com/photo-1712723247648-64a03ba7c333?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjcm9pc3NhbnQlMjBwYXN0cnl8ZW58MXx8fHwxNzYyMzk1OTI5fDA&ixlib=rb-4.1.0&q=80&w=1080' },
];

const tables = Array.from({ length: 12 }, (_, i) => ({
  id: i + 1,
  name: `Bàn ${i + 1}`,
  status: i % 3 === 0 ? 'occupied' : 'available'
}));

export function SalesPOS() {
  const [selectedCategory, setSelectedCategory] = useState('Coffee');
  const [selectedTable, setSelectedTable] = useState<string>('');
  const [order, setOrder] = useState<OrderItem[]>([]);

  const categories = ['Coffee', 'Tea', 'Pastry'];

  const filteredProducts = products.filter(p => p.category === selectedCategory);

  const addToOrder = (product: Product) => {
    const existing = order.find(item => item.id === product.id);
    if (existing) {
      setOrder(order.map(item =>
        item.id === product.id
          ? { ...item, quantity: item.quantity + 1 }
          : item
      ));
    } else {
      setOrder([...order, { ...product, quantity: 1 }]);
    }
  };

  const updateQuantity = (id: number, delta: number) => {
    setOrder(order.map(item =>
      item.id === id
        ? { ...item, quantity: Math.max(1, item.quantity + delta) }
        : item
    ));
  };

  const removeItem = (id: number) => {
    setOrder(order.filter(item => item.id !== id));
  };

  const subtotal = order.reduce((sum, item) => sum + (item.price * item.quantity), 0);
  const tax = subtotal * 0.1;
  const total = subtotal + tax;

  const handleCheckout = () => {
    if (order.length > 0 && selectedTable) {
      alert(`Thanh toán thành công!\nBàn: ${selectedTable}\nTổng tiền: ${total.toLocaleString('vi-VN')}đ`);
      setOrder([]);
      setSelectedTable('');
    } else {
      alert('Vui lòng chọn bàn và thêm sản phẩm vào đơn hàng!');
    }
  };

  return (
    <div className="flex gap-6 h-full">
      {/* Products Section */}
      <div className="flex-1">
        {/* Categories */}
        <div className="flex gap-3 mb-6">
          {categories.map(category => (
            <Button
              key={category}
              onClick={() => setSelectedCategory(category)}
              className={`h-14 px-6 rounded-2xl transition-all ${
                selectedCategory === category
                  ? 'bg-gradient-to-r from-orange-500 to-amber-600 text-white shadow-lg'
                  : 'bg-white text-amber-900 hover:bg-orange-50 border-2 border-orange-200'
              }`}
            >
              {category}
            </Button>
          ))}
        </div>

        {/* Products Grid */}
        <ScrollArea className="h-[calc(100vh-220px)]">
          <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {filteredProducts.map(product => (
              <Card
                key={product.id}
                className="overflow-hidden cursor-pointer hover:shadow-xl transition-all border-2 border-orange-100 hover:border-orange-300 rounded-2xl group"
                onClick={() => addToOrder(product)}
              >
                <div className="aspect-square relative bg-gradient-to-br from-orange-50 to-amber-50">
                  <ImageWithFallback
                    src={product.image}
                    alt={product.name}
                    className="w-full h-full object-cover group-hover:scale-105 transition-transform"
                  />
                  <div className="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-end justify-center pb-4">
                    <Plus className="h-8 w-8 text-white" />
                  </div>
                </div>
                <div className="p-4">
                  <h4 className="mb-2 text-amber-900">{product.name}</h4>
                  <p className="text-orange-600">{product.price.toLocaleString('vi-VN')}đ</p>
                </div>
              </Card>
            ))}
          </div>
        </ScrollArea>
      </div>

      {/* Order Section */}
      <div className="w-[420px]">
        <Card className="h-full bg-white rounded-2xl shadow-xl border-2 border-orange-100">
          <div className="p-6 border-b border-orange-100">
            <div className="flex items-center gap-3 mb-4">
              <div className="p-2 bg-gradient-to-br from-orange-500 to-amber-600 rounded-xl">
                <ShoppingCart className="h-5 w-5 text-white" />
              </div>
              <h3 className="text-amber-900">Đơn hàng</h3>
            </div>

            {/* Table Selection */}
            <div className="space-y-2">
              <label className="text-amber-900">Chọn bàn</label>
              <Select value={selectedTable} onValueChange={setSelectedTable}>
                <SelectTrigger className="h-11 rounded-xl border-orange-200">
                  <SelectValue placeholder="Chọn bàn..." />
                </SelectTrigger>
                <SelectContent>
                  {tables.filter(t => t.status === 'available').map(table => (
                    <SelectItem key={table.id} value={table.name}>
                      {table.name}
                    </SelectItem>
                  ))}
                </SelectContent>
              </Select>
            </div>
          </div>

          {/* Order Items */}
          <ScrollArea className="h-[calc(100vh-500px)] p-6">
            {order.length === 0 ? (
              <div className="text-center py-12 text-amber-600/50">
                Chưa có sản phẩm
              </div>
            ) : (
              <div className="space-y-3">
                {order.map(item => (
                  <div key={item.id} className="flex items-center gap-3 p-3 bg-orange-50 rounded-xl border border-orange-100">
                    <div className="flex-1">
                      <h4 className="text-amber-900">{item.name}</h4>
                      <p className="text-orange-600">{item.price.toLocaleString('vi-VN')}đ</p>
                    </div>
                    <div className="flex items-center gap-2">
                      <Button
                        size="icon"
                        variant="outline"
                        className="h-8 w-8 rounded-lg border-orange-200"
                        onClick={(e) => {
                          e.stopPropagation();
                          updateQuantity(item.id, -1);
                        }}
                      >
                        <Minus className="h-4 w-4" />
                      </Button>
                      <span className="w-8 text-center text-amber-900">{item.quantity}</span>
                      <Button
                        size="icon"
                        variant="outline"
                        className="h-8 w-8 rounded-lg border-orange-200"
                        onClick={(e) => {
                          e.stopPropagation();
                          updateQuantity(item.id, 1);
                        }}
                      >
                        <Plus className="h-4 w-4" />
                      </Button>
                      <Button
                        size="icon"
                        variant="ghost"
                        className="h-8 w-8 rounded-lg text-red-500 hover:bg-red-50"
                        onClick={(e) => {
                          e.stopPropagation();
                          removeItem(item.id);
                        }}
                      >
                        <Trash2 className="h-4 w-4" />
                      </Button>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </ScrollArea>

          {/* Summary */}
          <div className="p-6 border-t border-orange-100 space-y-3">
            <div className="flex justify-between text-amber-900">
              <span>Tạm tính:</span>
              <span>{subtotal.toLocaleString('vi-VN')}đ</span>
            </div>
            <div className="flex justify-between text-amber-900">
              <span>Thuế (10%):</span>
              <span>{tax.toLocaleString('vi-VN')}đ</span>
            </div>
            <Separator className="bg-orange-200" />
            <div className="flex justify-between text-amber-900">
              <span>Tổng cộng:</span>
              <span className="text-orange-600">{total.toLocaleString('vi-VN')}đ</span>
            </div>
            <Button
              onClick={handleCheckout}
              disabled={order.length === 0 || !selectedTable}
              className="w-full h-12 bg-gradient-to-r from-orange-500 to-amber-600 hover:from-orange-600 hover:to-amber-700 text-white rounded-xl shadow-lg hover:shadow-xl transition-all"
            >
              Thanh toán
            </Button>
          </div>
        </Card>
      </div>
    </div>
  );
}
